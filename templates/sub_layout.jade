doctype html
block vars
  - var bodyclass = null;
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width')
      title
        block title
          = locals.name
      link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
      link(rel='stylesheet', href=contents.css['index.css'].url)
  body(class=bodyclass)

    header.subhead
      div.container
        img(src=contents.img['minilogo.svg'].url alt="" height="25")
        h1.subheadtitle= locals.name

    section#content.content
      div.px2.py3.container
        block content

    include ./footer.jade
